{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "docker:enableMajor",
    "schedule:earlyMondays"
  ],
  "timezone": "Europe/Berlin",
  "automerge": false,
  "ignoreTests": true,
  "prHourlyLimit": 0,
  "packageRules": [
    /*{
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/hotio/stash"],
      "versioning": "regex:^release-v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/hotio/whisparr"],
      "versioning": "regex:^v3-v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },*/
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/hotio/"],
      "versionCompatibility": "^(?<compatibility>.*)-(?<version>.*)$"
    },
    {
      "groupName": "docker-digest",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest"],
      "automerge": true
    }
  ]
}
